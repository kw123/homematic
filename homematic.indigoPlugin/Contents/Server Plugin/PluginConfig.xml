		<Label>Get all VALUES from homematic every [secs]:</Label>   
		<List>
			<Option value="1"  >1</Option>
			<Option value="2"  >2</Option>
			<Option value="3"  >3 default</Option>
			<Option value="5"  >5</Option>
			<Option value="10" >10</Option>
		</List>
	</Field>

